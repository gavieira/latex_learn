\usepackage{ifthen}

%Display current section, subsection and current/total slide number at headline
\setbeamertemplate{headline}
{%
	\leavevmode%
	\ifthenelse{\not\equal{\insertsubsectionhead}{}}
	{
	\begin{beamercolorbox}[wd=.333\paperwidth,ht=2.5ex,dp=1.125ex]{section in head/foot}%
		\hbox to .333\paperwidth{\hfil\insertsectionhead\hfil}
	\end{beamercolorbox}%
	\begin{beamercolorbox}[wd=.333\paperwidth,ht=2.5ex,dp=1.125ex]{subsection in head/foot}%
		\hbox to .333\paperwidth{\hfil\textbf{\insertsubsectionhead}\hfil}
	\end{beamercolorbox}%
	}
	{
		\begin{beamercolorbox}[wd=.333\paperwidth,ht=2.5ex,left,dp=1.125ex]{section in head/foot}%
		\hbox to .333\paperwidth{\hfil\hfil}
	\end{beamercolorbox}%
	\begin{beamercolorbox}[wd=.333\paperwidth,ht=2.5ex,dp=1.125ex]{subsection in head/foot}%
		\hbox to .333\paperwidth{\hfil\textbf{\insertsectionhead}\hfil}
	\end{beamercolorbox}%
	}
	\ifnum\c@framenumber=1
	\begin{beamercolorbox}[wd=0.333\paperwidth,ht=2.53ex,right,dp=1.125ex]{page number}
		\hbox to .333\paperwidth{\hfil\hfil}
	\end{beamercolorbox}
	\else
	\begin{beamercolorbox}[wd=0.333\paperwidth,ht=2.53ex,right,dp=1.125ex]{page number}
		\hbox to .333\paperwidth{\hfil\insertframenumber/\inserttotalframenumber\hfil}
	\end{beamercolorbox}
	\fi%
}

